<%- include('../layouts/header.ejs') %>
    <h4>Employee Lists</h4>
    <% if(employees){ %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Job</th>
                    <th scope="col">Age</th>
                    <th scope="col">City</th>
                    <th scope="col">Option</th>
                </tr>
            </thead>
            <tbody>
                <% if(employees.length> 1){
                    employees.forEach(employee => {
                    %>
                    <tr>
                        <th>
                            <%= employee.id %>
                        </th>
                        <td>
                            <%= employee.name %>
                        </td>
                        <td>
                            <%= employee.job %>
                        </td>
                        <td>
                            <%= employee.age %>
                        </td>
                        <td>
                            <%= employee.city %>
                        </td>
                        <td>
                            <a href="/employees/update/<%= employee.id %>" type="button"
                                class="btn btn-primary me-1">Update</button>
                                <a href="/employees/delete/<%= employee.id %>" type="button"
                                    class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }); } else{ %>
                        <tr>
                            <th>
                                <%= employee.id %>
                            </th>
                            <td>
                                <%= employee.name %>
                            </td>
                            <td>
                                <%= employee.job %>
                            </td>
                            <td>
                                <%= employee.age %>
                            </td>
                            <td>
                                <%= employee.city %>
                            </td>
                            <td>
                                <a href="/employeesupdate/<%= employees.id %>" type="button"
                                    class="btn btn-primary me-1">Update</button>
                                    <a href="/employeesdelete/<%= employees.id %>" type="button"
                                        class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% } %>
            </tbody>
        </table>
        <% } %>
    <div class="div border rounded">
        <form action="/employees/create" method="post" class="my-4 mx-4">
            <div class="row mb-4">
                <h4>Create a new employee</h4>
            </div>
            <div class="row mb-3">
                <label for="inputName" class="col-sm-1 col-form-label">Name</label>
                <div class="col-sm-3">
                    <input required name="name" type="text" class="form-control" id="inputName">
                </div>
                <label for="inputJob" class="col-sm-1 col-form-label">Job</label>
                <div class="col-sm-3">
                    <input required name="job" type="text" class="form-control" id="inputJob">
                </div>
            </div>
            <div class="row mb-4">
                <label for="inputAge" class="col-sm-1 col-form-label">Age</label>
                <div class="col-sm-3">
                    <input required name="age" type="text" class="form-control" id="inputAge">
                </div>
                <label for="inputCity" class="col-sm-1 col-form-label">City</label>
                <div class="col-sm-3">
                    <input required name="city" type="text" class="form-control" id="inputCity">
                </div>
            </div>
            <button type="submit" class="btn btn-success me-1">Create</button>
        </form>
    </div>
<%- include('../layouts/footer.ejs') %>