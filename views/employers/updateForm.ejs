<%- include('../layouts/header.ejs') %>
    <div class="div border rounded">
        <form action="/employers/update/<%= employer.id %>" method="post" class="my-4 mx-4">
            <div class="row mb-4">
                <h4>Update employer</h4>
            </div>
            <div class="row mb-3">
                <label for="inputName" class="col-sm-1 col-form-label">Name</label>
                <div class="col-sm-3">
                    <input required value="<%= employer.name %>" name="name" type="text" class="form-control" id="inputName">
                </div>
                <label for="inputJob" class="col-sm-1 col-form-label">Job</label>
                <div class="col-sm-3">
                    <input required value="<%= employer.type %>" name="type" type="text" class="form-control" id="inputJob">
                </div>
            </div>
            <div class="row mb-4">
                <label for="inputAge" class="col-sm-1 col-form-label">Age</label>
                <div class="col-sm-3">
                    <input required value="<%= employer.total_employee %>" name="total_employee" type="text" class="form-control" id="inputAge">
                </div>
                <label for="inputCity" class="col-sm-1 col-form-label">City</label>
                <div class="col-sm-3">
                    <input required value="<%= employer.city %>" name="city" type="text" class="form-control" id="inputCity">
                </div>
            </div>
            <button type="submit" class="btn btn-success me-1">Update</button>
        </form>
    </div>
<%- include('../layouts/footer.ejs') %>