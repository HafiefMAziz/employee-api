<%- include('../layouts/header.ejs') %>
    <div class="div border rounded">
        <form action="/jobs/update/<%= job.id %>" method="post" class="my-4 mx-4">
            <div class="row mb-4">
                <h4>Update job</h4>
            </div>
            <div class="row mb-3">
                <label for="inputName" class="col-sm-1 col-form-label">Name</label>
                <div class="col-sm-3">
                    <input required value="<%= job.name %>" name="name" type="text" class="form-control" id="inputName">
                </div>
                <label for="inputJob" class="col-sm-1 col-form-label">Job</label>
                <div class="col-sm-3">
                    <input required value="<%= job.category %>" name="category" type="text" class="form-control" id="inputJob">
                </div>
            </div>
            <div class="row mb-4">
                <label for="inputMaxSalary" class="col-sm-1 col-form-label">Max Salary</label>
                <div class="col-sm-3">
                    <input required value="<%= job.max_salary %>" name="max_salary" type="text" class="form-control" id="inputAge">
                </div>
                <label for="inputMinSalary" class="col-sm-1 col-form-label">Min Salary</label>
                <div class="col-sm-3">
                    <input required value="<%= job.min_salary %>" name="min_salary" type="text" class="form-control" id="inputMinSalary">
                </div>
            </div>
            <button type="submit" class="btn btn-success me-1">Update</button>
        </form>
    </div>
<%- include('../layouts/footer.ejs') %>